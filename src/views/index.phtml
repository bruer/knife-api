<body>
  <div class="container">
    <h1><?=$title?></h1>
    <p>A journal for knifing people</p>
    <div id="renderTarget"></div>
  </div>

  <template id="loginFormTemplate">
      <h2>Login</h2>  
      <p>Detta är en template som visar ett loginformulär</p> 
      <form action="" method="POST" id="loginForm">
      <input type="text" name="username" id="username" placeholder="username">
      <input type="password" name="password" id="password" placeholder="password">
      <button type="submit">Logga in</button>
      </form>
    </template>
    
    <template id="registerFormTemplate">
    <h2>Register</h2>
      <form id="RegisterForm">
      <label for="username">Användare:</label>
        <input type="text" name="username" id="username">
        <label for="password">Lösenord:</label>
        <input type="password" name="password" id="password">
        <button type="submit" id="registerBtn">Registrera</button>
      </form>
    </template>
    
    <template id="entriesTemplate">
      <h2>Entries</h2>
      <ul id="entryList">
      <p>hej</p>
      </ul>
    </template>

    <template id="usersTemplate">
      <h2>Users</h2>
      <ul id="usersList">
      </ul>
    </template>


  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  <script type="text/javascript" src="main.js"></script>
  <script type="text/javascript" src="users.js"></script>
  <script type="text/javascript" src="registerBtn.js"></script>
</body>
</html>
